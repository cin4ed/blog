---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className } = Astro.props;
---

{
  href ? (
    <a
      href={href}
      style="box-shadow: rgba(255, 255, 255, 0.25) 0px 2px 0px 0px inset, rgba(51, 92, 117, 0.5) 0px 2px 4px 0px;"
      class:list={[
        "inline-flex items-center gap-1 rounded-xl bg-gradient-to-b from-blumine-600 to-blumine-700 px-6 py-1 text-lg text-white transition-all duration-200 hover:from-blumine-700 hover:to-blumine-800 hover:border-blumine-900 border border-blumine-800 active:from-blumine-800 active:to-blumine-900 active:border-blumine-950",
        className,
      ]}
    >
      <slot />
    </a>
  ) : (
    <button
      style="box-shadow: rgba(255, 255, 255, 0.25) 0px 2px 0px 0px inset, rgba(51, 92, 117, 0.5) 0px 2px 4px 0px;"
      class:list={[
        "inline-flex items-center gap-1 rounded-xl bg-gradient-to-b from-blumine-600 to-blumine-700 px-6 py-1 text-lg text-white transition-all duration-200 hover:from-blumine-700 hover:to-blumine-800 hover:border-blumine-900 border border-blumine-800 active:from-blumine-800 active:to-blumine-900 active:border-blumine-950",
        className,
      ]}
    >
      <slot />
    </button>
  )
} 