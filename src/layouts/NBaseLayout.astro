---
import "@styles/fonts.css";
---

<!doctype html>
<html lang="en" class="antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@300;400;500&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>BetweenFrames</title>
  </head>
  <body class="min-h-screen">
    <nav class="fixed top-0 z-10 w-full border-b border-secondary/10 bg-white/5 backdrop-blur-md">
      <div class="mx-auto flex max-w-2xl flex-col items-center gap-2 px-4 py-2 sm:flex-row sm:justify-between">
        <h1 class="font-['Crimson_Pro'] text-xl font-light tracking sm:text-2xl">
          Between Frames
        </h1>
        <div class="flex items-center gap-4 overflow-x-auto px-2 font-['Crimson_Pro'] text-base sm:gap-6 sm:text-lg">
          <a href="/" class="whitespace-nowrap transition-colors hover:text-foreground">Home</a>
          <a href="/about" class="whitespace-nowrap transition-colors hover:text-foreground">About</a>
          <a href="/projects" class="whitespace-nowrap transition-colors hover:text-foreground">Projects</a>
          <a href="https://github.com/cin4ed" class="whitespace-nowrap transition-colors hover:text-foreground">Github</a>
          <a href="https://www.linkedin.com/in-kenneth-quintero-1971a12a8/" class="whitespace-nowrap transition-colors hover:text-foreground">LinkedIn</a>
        </div>
      </div>
    </nav>
    
    <main class="mx-auto max-w-2xl px-4 pt-24 sm:pt-16">
      <slot />
    </main>

    <footer class="mx-auto max-w-2xl px-4 py-24 sm:pt-16">
      <p class="text-center text-sm font-['Crimson_Pro'] text-stone-700">
        &copy; {new Date().getFullYear()} Kenneth Quintero. All rights reserved.
      </p>
    </footer>
  </body>
</html>
