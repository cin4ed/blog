---
import "@styles/fonts.css";
import Header from "@components/Header.astro";
import NavigationLinks from "@components/NavigationLinks.astro";
import { getLangFromUrl } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang} class="bg-background text-foreground antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>BetweenFrames</title>
  </head>
  <body class="min-h-screen">
    <Header />
    <div
      class="mx-auto mt-5 px-4 pb-10 md:mt-2 md:grid md:max-w-4xl md:grid-cols-8 md:gap-5"
    >
      <div class="col-span-2 hidden md:block">
        <div class="md:sticky md:top-5">
          <NavigationLinks />
        </div>
      </div>
      <div class="col-span-6">
        <slot />
      </div>
    </div>
  </body>
  <script>
    import "../scripts/nav.js";
  </script>
</html>
