---
import "@styles/fonts.css";
import Links from "@components/Links.astro";
---

<!doctype html>
<html lang="en" class="bg-background text-foreground antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>BetweenFrames</title>
  </head>
  <body class="min-h-screen">
    <header
      class="sticky top-0 md:static px-4 bg-background border-b md:border-none border-secondary z-10 border-opactiy-80"
    >
      <div class="py-3 flex justify-between items-center md:block">
        <h1
          class="md:text-center font-[Gruppo] text-primary text-3xl tracking-widest"
        >
          Between Frames
        </h1>
        <button
          id="show-menu-btn"
          type="button"
          class="border border-secondary border-opacity-80 active:bg-zinc-900 p-2 rounded-md md:hidden"
        >
          <svg
            class="text-primary"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-menu"
            ><line x1="4" x2="20" y1="12" y2="12"></line><line
              x1="4"
              x2="20"
              y1="6"
              y2="6"></line><line x1="4" x2="20" y1="18" y2="18"></line></svg
          >
        </button>
      </div>
      <div id="nav-bar" class="hidden">
        <Links />
      </div>
    </header>
    <div
      class="mt-5 md:mt-2 px-4 pb-10 md:max-w-4xl mx-auto md:grid md:grid-cols-8 md:gap-5"
    >
      <div class="col-span-2 hidden md:block">
        <div class="md:sticky md:top-5">
          <Links />
        </div>
      </div>
      <div class="col-span-6">
        <slot />
      </div>
    </div>
    <script>
      const showMenuBtn = document.getElementById("show-menu-btn");
      const navBar = document.getElementById("nav-bar");

      showMenuBtn!.addEventListener("click", () => {
        navBar!.classList.toggle("hidden");
      });
    </script>
  </body>
</html>
