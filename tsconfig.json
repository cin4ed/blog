{
  "extends": "astro/tsconfigs/base",
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.astro"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@layouts/*": ["layouts/*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"]
    }
  }
}
